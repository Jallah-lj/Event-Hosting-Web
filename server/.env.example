# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Frontend URL (for email links)
BASE_URL=http://localhost:5173

# Database
DATABASE_URL=./database.sqlite

# Email Configuration (SMTP)
# For production, use a real SMTP provider like SendGrid, Mailgun, or AWS SES
# Leave empty to use Ethereal (test email service) in development
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=LiberiaConnect Events <noreply@liberiaconnect.com>

# Example: SendGrid Configuration
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# File Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Payment Gateway (for future integration)
# STRIPE_SECRET_KEY=
# MTN_MOMO_API_KEY=
# ORANGE_MONEY_API_KEY=

# Supabase (for future migration)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_KEY=your-service-key
